// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Assistant {
  id Int @default(autoincrement()) @id
  provider String
  name String
  prompt String
  metadata String?
  conversations Conversation[]
}

model Conversation {
  id Int @default(autoincrement()) @id
  provider String
  name String?
  assistantId Int
  assistant Assistant @relation(fields: [assistantId], references: [id])
  metadata String?
}

model Message {
  id Int @default(autoincrement()) @id
  conversationId Int
  role String
  text String
}